            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type coordonnée ou dimension</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu des attributs «&#x00A0;coordx&#x00A0;», «&#x00A0;coordy&#x00A0;», «&#x00A0;coordz&#x00A0;», «&#x00A0;dim
                       &#x00A0;», «&#x00A0;dimx&#x00A0;», «&#x00A0;dimy&#x00A0;» et «&#x00A0;dimz&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:NMTOKEN">
            <xs:pattern value="\d{1,}(\.\d{1,2})?(cm|em|ex|in|mm|pc|pt|px)?"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- ++++++++++++++++++ liste de langues ++++++++++++++++++ -->
    <xs:simpleType name="listelangtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type liste de langues</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu de l'attribut «&#x00A0;lang&#x00A0;» des éléments «&#x00A0;article&#x00A0;», «
                        bloccitation&#x00A0;», «&#x00A0;epigraphe&#x00A0;», «&#x00A0;grmotcle&#x00A0;» et «&#x00A0;revue&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:restriction>
            <xs:simpleType>
                <xs:list itemType="lang:iso639type"/>
            </xs:simpleType>
            <xs:minLength value="1"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- ++++++++++++++++++ numération ++++++++++++++++++ -->
    <xs:simpleType name="numtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type numération</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu de l’attribut «&#x00A0;numeration&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:NMTOKEN">
            <xs:enumeration value="autre"/>
            <xs:enumeration value="decimal"/>
            <xs:enumeration value="lettremaj"/>
            <xs:enumeration value="lettremin"/>
            <xs:enumeration value="romainmaj"/>
            <xs:enumeration value="romainmin"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- ++++++++++++++++++ resolution ++++++++++++++++++ -->
    <xs:simpleType name="resoltype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type résolution</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu de l’attribut «&#x00A0;resol&#x00A0;»</td></tr>.</table>
            </xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:NMTOKEN">
            <xs:pattern value="\d{1,}(\.\d{1,2})?((d|l|p|px)p(cm|i|mm|p))?"/>
        </xs:restriction>
    </xs:simpleType>
    <!-- ================== types complexes ================== -->
    <!-- ++++++++++++++++++ alinea ++++++++++++++++++ -->
    <xs:complexType name="alineatype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type alinéa</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments dont le modèle de contenu est composé, en tout ou en partie, de
                        l’élément «&#x00A0;alinea&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element ref="alinea" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <!-- ++++++++++++++++++ cellule de tableau ++++++++++++++++++ -->
    <xs:complexType name="celluletype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type cellule</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs aux cellules d'un tableau dont le modèle de contenu est
                        composé du groupe d’éléments «&#x00A0;blocimbrique&#x00A0;», des groupes d’attributs «&#x00A0;id
                        &#x00A0;», «&#x00A0;nbcol&#x00A0;» et «&#x00A0;align&#x00A0;», ainsi que des attributs «&#x00A0;identete&#x00A0;»,
                        «&#x00A0;idcol&#x00A0;», «&#x00A0;idligne&#x00A0;», «&#x00A0;nbligne&#x00A0;» et «&#x00A0;portee&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:group ref="blocimbrique" maxOccurs="unbounded"/>
        <xs:attributeGroup ref="id"/>
        <xs:attribute name="identete" type="xs:IDREFS">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Référence à l’identifiant d’une ou plusieurs cellule(s) d’entête de
                            tableau</td></tr>
                        <tr><td>Description:</td>
                        <td>Toute référence à un nom, caractère ou indicatif caractérisant une ou
                            plusieurs cellules d’entête et permettant de les identifier ou de les
                            reconnaître comme telles dans un tableau.</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="idcol" type="xs:IDREFS">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Référence à l’identifiant d’une ou plusieurs colonne(s) de
                            tableau</td></tr>
                        <tr><td>Description:</td>
                        <td>Toute référence à un nom, caractère ou indicatif caractérisant une ou
                            plusieurs colonnes et permettant de les identifier ou de les reconnaître
                            comme telles dans un tableau.</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="idligne" type="xs:IDREFS">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Référence à l’identifiant d’une ou plusieurs ligne(s) de
                            tableau</td></tr>
                        <tr><td>Description:</td>
                        <td>Toute référence à un nom, caractère ou indicatif caractérisant une ou
                            plusieurs lignes et permettant de les identifier ou de les reconnaître
                            comme telles dans un tableau.</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attributeGroup ref="nbcol"/>
        <xs:attribute name="nbligne" type="xs:positiveInteger">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Nombre de lignes</td></tr>
                        <tr><td>Description:</td>
                        <td>Nombre de lignes.</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="portee">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Portée de l’entête</td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <p>La portée de l’entête indique l'ensemble des cellules pour
                                lesquelles la cellule courante fournit des informations.</p>
                            <table>
                                <tr><td>ligne</td>
                                <td>La cellule fournit des informations d'entête pour le reste de
                                    la ligne qui la contient</td></tr>
                                <tr><td>colonne</td>
                                <td>La cellule fournit des informations d'entête pour le reste de
                                    la colonne qui la contient</td></tr>
                                <tr><td>grligne</td>
                                <td>La cellule fournit des informations d'entête pour le reste du
                                    groupe ligne qui la contient</td></tr>
                                <tr><td>grcolonne</td>
                                <td>La cellule fournit des informations d'entête pour le reste du
                                    groupe colonne qui la contient</td></tr>
                            </table>
                        </td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:NMTOKEN">
                    <xs:enumeration value="ligne"/>
                    <xs:enumeration value="colonne"/>
                    <xs:enumeration value="grligne"/>
                    <xs:enumeration value="grcolonne"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attributeGroup ref="align"/>
    </xs:complexType>
    <!-- ++++++++++++++++++ citation ++++++++++++++++++ -->
    <xs:complexType name="citationtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type citation</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs aux citations dont le modèle de contenu est composé, en
                        tout ou en partie, du groupe d’éléments «&#x00A0;blocimbrique&#x00A0;», des éléments «
                        equation&#x00A0;», «&#x00A0;grequation&#x00A0;» et «&#x00A0;source&#x00A0;» et de l’attribut «&#x00A0;lang&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:choice maxOccurs="unbounded">
                <xs:group ref="blocimbrique"/>
                <xs:element ref="equation"/>
                <xs:element ref="grequation"/>
            </xs:choice>
            <xs:element ref="source" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="lang" type="listelangtype">
    <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Langue</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu de l’attribut «&#x00A0;lang&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
</xs:attribute>
    </xs:complexType>
    <!-- ++++++++++++++++++ élément d'une liste ++++++++++++++++++ -->
    <xs:complexType name="elemlistetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type élément de liste</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs aux éléments de liste dont le modèle de contenu est
                        composé, en tout ou en partie, du groupe d’éléments «&#x00A0;blocimbrique&#x00A0;» et du
                        groupe d’attributs «&#x00A0;langopt&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:group ref="blocimbrique" maxOccurs="unbounded"/>
        <xs:attributeGroup ref="langopt"/>
    </xs:complexType>
    <!-- ++++++++++++++++++ espacement ++++++++++++++++++ -->
    <xs:complexType name="espacetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type espacement</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs à l'espacement dont le modèle de contenu est composé, en
                        tout ou en partie, de l’atttribut «&#x00A0;dim&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="dim" type="coorddimtype" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Dimension</td></tr>
                        <tr><td>Description:</td>
                        <td>Nombre exprimant, dans l'unité choisie, la valeur numérique d'une
                            longueur.</td></tr>
                        <tr><td>Format:</td>
                        <td>Le format prescrit est le suivant : <em>nombre</em> + <em>unité de mesure</em>. Les
                            unités de mesure doivent se limiter à celles prescrites par le W3C, soit
                                :<strong>cm, em, ex, in, mm, pc, pt et px</strong>.</td></tr>
                        <tr><td>Documents de référence:</td>
                        <td>W3C – CSS1 : 6.1 Length units (Unités de mesure) (<a href="http://www.w3.org/TR/REC-CSS1#length-units">http://www.w3.org/TR/REC-CSS1#length-units</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
    <!-- ++++++++++++++++++ illustration ++++++++++++++++++ -->
    <xs:complexType name="illustrationtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type illustration</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs aux illustrations dont le modèle de contenu est composé,
