    <!-- ================== revue ================== -->
    <xs:element name="revue">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Information concernant la revue. La revue est un périodique spécialisé
                        regroupant des articles rédigés par des spécialistes, qui sont accompagnés
                        d'une bibliographie et généralement soumis à un comité de lecture.</td></tr>
                    <tr><td>Exemple:</td>
                            <td>
                                <p class="exemple">&lt;revue id="" lang="fr"&gt;<br/>
                                    &lt;titrerev&gt;…&lt;/titrerev&gt;<br/>
                                    &lt;sstitrerev&gt;…&lt;/sstitrerev&gt;<br/>
                                    &lt;titrerevparal lang="en"&gt;…&lt;/titrerevparal&gt;<br/>
                                    &lt;sstitrerevparal lang="en"&gt;…&lt;/sstitrerevparal&gt;<br/>
                                    &lt;titrerevabr&gt;…&lt;/titrerevabr&gt;<br/>
                                    &lt;grdescripteur lang="fr"&gt;…&lt;/grdescripteur&gt;<br/>
                                    &lt;idissn&gt;…&lt;/idissn&gt;<br/>
                                    &lt;idissnnum&gt;…&lt;/idissnnum&gt;<br/>
                                    &lt;directeur&gt;…&lt;/directeur&gt;<br/>
                                    &lt;redacteurchef&gt;…&lt;/redacteurchef&gt;<br/>
                                    &lt;/revue&gt;<br/>
                                </p>
                            </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="titrerev"/>
                <xs:element ref="sstitrerev" minOccurs="0"/>
                <xs:sequence minOccurs="0" maxOccurs="unbounded">
                    <xs:element ref="titrerevparal"/>
                    <xs:element ref="sstitrerevparal" minOccurs="0"/>
                </xs:sequence>
                <xs:element ref="titrerevabr" minOccurs="0"/>
                <xs:element ref="titrerevabrparal" minOccurs="0" maxOccurs="unbounded"/>
                <xs:element ref="grdescripteur" minOccurs="0" maxOccurs="unbounded"/>
                <xs:element ref="idissn" minOccurs="0"/>
                <xs:element ref="idissnnum" minOccurs="0"/>
                <xs:element ref="directeur" minOccurs="0" maxOccurs="unbounded"/>
                <xs:element ref="redacteurchef" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
            <xs:attributeGroup ref="id"/>
            <xs:attributeGroup ref="listelang"/>
        </xs:complexType>
    </xs:element>
    <!-- ++++++++++++++++++ titre de la revue ++++++++++++++++++ -->
    <xs:element name="titrerev" type="textetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Titre de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Nom, ou première partie du nom, que porte la revue dans laquelle est
                        publié l’article décrit.</td></tr>
                    <tr><td>Exemple 1:</td>
                            <td>
                                <p class="exemple">&lt;titrerev&gt;Meta&lt;/titrerev&gt;<br/>
                                </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;titrerev&gt;Santé mentale au Québec&lt;/titrerev&gt;<br/>
                                </p>
                            </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="sstitrerev" type="textetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Sous-titre de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Seconde partie du nom que porte la revue.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;revue id="" lang="fr"&gt;<br/>
                            &lt;titrerev&gt;Meta&lt;/titrerev&gt;<br/>
                            &lt;sstitrerev&gt;journal des traducteurs&lt;/sstitrerev&gt;<br/>
                            &lt;titrerevparal lang="en"&gt;Meta&lt;/titrerevparal&gt;<br/>
                            &lt;sstitrerevparal lang="en"&gt;Translator’s Journal&lt;/sstitrerevparal&gt;<br/>
                            &lt;/revue&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="titrerevparal" type="textelangtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Titre parallèle de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Nom, ou première partie du nom, que porte la revue, présenté dans une
                        autre langue que la langue principale de la revue.</td></tr>
                    <tr><td>Exemple 1:</td>
                            <td>
                                <p class="exemple">&lt;titrerev&gt;Relations industrielles&lt;/titrerev&gt;<br/>
                                    &lt;titrerevparal lang="en"&gt;Industrial Relations&lt;/titrerevparal&gt;<br/>
                                </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;titrerev&gt;Loisir et société&lt;/titrerev&gt;<br/>
                                    &lt;titrerevparal lang="en"&gt;Society and Leisure&lt;/titrerevparal&gt;<br/>
                                </p>
                            </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="sstitrerevparal" type="textelangtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Sous-titre parallèle de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Seconde partie du nom que porte la revue, présentée dans une autre langue
                        que la langue principale de la revue.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;revue id="" lang="en"&gt;<br/>
                            &lt;titrerev&gt;Intersections&lt;/titrerev&gt;<br/>
                            &lt;sstitrerev&gt;Canadian Journal of Music&lt;/sstitrerev&gt;<br/>
                            &lt;titrerevparal lang="fr"&gt;Intersections&lt;/titrerevparal&gt;<br/>
                            &lt;sstitrerevparal lang="fr"&gt;revue canadienne de musique&lt;/sstitrerevparal&gt;<br/>
                            &lt;/revue&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="titrerevabr" type="textetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Titre abrégé de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Nom abrégé que porte la revue.</td></tr>
                    <tr><td>Commentaires:</td>
                    <td>Le titre abrégé de la revue est déterminé par la revue, et est
                        généralement utilisé par cette dernière, en lieu et place du titre de la
                        revue.</td></tr>
                    <tr><td>Exemple 1:</td>
                    <td>
                        <p class="exemple">&lt;titrerev&gt;Santé mentale au Québec&lt;/titrerev&gt;<br/>
                            &lt;titrerevabr&gt;SMQ&lt;/titrerevabr&gt;<br/>
                        </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;titrerev&gt;Lien social et Politiques&lt;/titrerev&gt;<br/>
                                    &lt;titrerevabr&gt;LSP&lt;/titrerevabr&gt;<br/>
                                </p>
                            </td></tr>
                        </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="titrerevabrparal" type="textelangtype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Titre parallèle abrégé de la revue</td></tr>
                    <tr><td>Description:</td>
                    <td>Nom abrégé que porte la revue, présenté dans une autre langue que la
                        langue principale de la revue.</td></tr>
                    <tr><td>Commentaires:</td>
                    <td>Le titre parallèle abrégé de la revue est déterminé par la revue, et est
                        généralement utilisé par cette dernière, en lieu et place du titre  parallèle de la
                        revue.</td></tr>
                    <tr><td>Exemple 1:</td>
                    <td>
                        <p class="exemple">&lt;titrerev&gt;Relations industrielles&lt;/titrerev&gt;<br/>
                            &lt;titrerevparal lang="en"&gt;Industrial Relations&lt;/titrerevparal&gt;<br/>
                            &lt;titrerevabr&gt;RI&lt;/titrerevabr&gt;<br/>
                            &lt;titrerevabrparal lang="en"&gt;IR&lt;/titrerevabrparal&gt;<br/>
                        </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;titrerev&gt;Journal of the Canadian Historical Association&lt;/titrerev&gt;<br/>
                                    &lt;titrerevparal lang="fr"&gt;Revue de la Société historique du Canada&lt;/titrerevparal&gt;<br/>
                                    &lt;titrerevabr&gt;JCHA&lt;/titrerevabr&gt;<br/>
                                    &lt;titrerevabrparal lang="fr"&gt;RSHC&lt;/titrerevabrparal&gt;<br/>
                                </p>
                            </td></tr>
                        </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <!-- ++++++++++++++++++ issn ++++++++++++++++++ -->
    <xs:element name="idissn" type="id:issntype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>ISSN</td></tr>
                    <tr><td>Description:</td>
                    <td>Numéro qui identifie, sur le plan international, chaque titre clé de
                        publications en série, dans le format papier. Pour <em>International
                            Standard Serial Number</em>.</td></tr>
                    <tr><td>Commentaires:</td>
                    <td>Si la revue n’est diffusée qu’en format numérique, et ne possède donc pas
                        d’ISSN (imprimé), il est recommandé de ne pas intégrer cet élément.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;idissn&gt;4829-0298&lt;/idissn&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="idissnnum" type="id:issntype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>ISSN numérique</td></tr>
                    <tr><td>Description:</td>
                    <td>Numéro qui identifie, sur le plan international, chaque titre clé de
                        publications en série, dans le format numérique. Pour <em>International
                            Standard Serial Number</em>.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;idissnnum&gt;8632-1234&lt;/idissnnum&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <!-- ++++++++++++++++++ personnel ++++++++++++++++++ -->
    <xs:element name="directeur" type="personneltype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Directeur</td></tr>
                    <tr><td>Description:</td>
                    <td>Celui qui est à la tête d'une revue dans son ensemble, rédaction et
                        administration.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;directeur&gt;<br/>
                            &lt;fonction&gt;Directrice adjointe&lt;/fonction&gt;<br/>
                            &lt;nompers&gt;<br/>
                            &lt;prenom&gt;Mélanie&lt;/prenom&gt;<br/>
                            &lt;nomfamille&gt;Lecourbe&lt;/nomfamille&gt;<br/>
                            &lt;/nompers&gt;<br/>
                            &lt;/directeur&gt;<br/></p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
    </xs:element>
    <xs:element name="redacteurchef">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Rédacteur en chef</td></tr>
                    <tr><td>Description:</td>
                    <td>Personne qui a la responsabilité des services de rédaction d'un journal ou
                        d'un périodique.</td></tr>
                    <tr><td>Commentaires:</td>
                    <td>Il est recommandé que tous les noms des personnes qui apparaissent à la
                        suite d’une chaîne de caractère de type «&#x00A0;sous la direction de&#x00A0;» ou «&#x00A0;numéro
                        réalisé par&#x00A0;» soient placés à l'intérieur d'un élément «&#x00A0;redacteurchef&#x00A0;»,
                        avec la valeur «&#x00A0;invite&#x00A0;» de l’attribut «&#x00A0;typerc&#x00A0;», même si cela signifie
                        parfois le dédoublement d’information par rapport au directeur ou au
                        rédacteur en chef régulier.</td></tr>
                    <tr><td>Exemple 1:</td>
                    <td>
                        <p class="exemple">&lt;redacteurchef typerc="regulier" sexe="feminin"&gt;<br/>
                            &lt;nompers&gt;<br/>
                            &lt;prenom&gt;Johanne&lt;/prenom&gt;<br/>
                            &lt;nomfamille&gt;Laplante&lt;/nomfamille&gt;<br/>
                            &lt;/nompers&gt;<br/>
                            &lt;/redacteurchef&gt;<br/>
                        </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;redacteurchef typerc="regulier" sexe="feminin"&gt;<br/>
                                    &lt;fonction&gt;Rédactrice en chef&lt;/fonction&gt;<br/>
                                    &lt;nompers&gt;<br/>
                                    &lt;prenom&gt;Maryse&lt;/prenom&gt;<br/>
                                    &lt;nomfamille&gt;Gagné&lt;/nomfamille&gt;<br/>
                                    &lt;/nompers&gt;<br/>
                                    &lt;/redacteurchef&gt;<br/>
                                </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 3:</td><td>
                                <p class="exemple">&lt;redacteurchef typerc="invite" sexe="masculin"&gt;<br/>
                                    &lt;nompers&gt;<br/>
                                    &lt;prenom&gt; Georges&lt;/prenom&gt;<br/>
                                    &lt;autreprenom&gt;L.&lt;/autreprenom&gt;<br/>
                                    &lt;nomfamille&gt;Bastin&lt;/nomfamille&gt;<br/>
                                    &lt;/nompers&gt;<br/>
                                    &lt;/redacteurchef&gt;<br/>
                                </p>
                            </td></tr>
                        </table>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="personneltype">
                    <xs:attribute name="typerc" use="required">
                        <xs:annotation>
                            <xs:documentation xml:lang="fr">
                                <table>
                                    <tr><td>Étiquette:</td>
                                    <td>Type de rédacteur en chef</td></tr>
                                    <tr><td>Description:</td>
                                    <td>
                                        <p>Nature ou genre du rédacteur en chef.</p>
                                        <table>
                                            <tr><td>invite</td>
                                            <td>Rédacteur en chef invité</td></tr>
                                            <tr><td>regulier</td>
                                            <td>Rédacteur en chef régulier</td></tr>
                                        </table>
                                    </td></tr>
                                </table>
                            </xs:documentation>
                        </xs:annotation>
                        <xs:simpleType>
                            <xs:restriction base="xs:NMTOKEN">
                                <xs:enumeration value="invite"/>
                                <xs:enumeration value="regulier"/>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:attribute>
                    <xs:attributeGroup ref="idrefs"/>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
    <xs:element name="fonction">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Fonction</td></tr>
                    <tr><td>Description:</td>
                    <td>Emploi défini par l'ensemble des tâches, des obligations et des
                        responsabilités qui globalement constituent le travail d'une
                        personne.</td></tr>
                    <tr><td>Commentaires:</td>
                    <td>Permet la gestion de l’affichage des différents titres pour les directeurs
                        et les rédacteurs en chef lorsqu’ils ne souhaitent pas avoir la fonction par
                        défaut associée à l'élément parent, soit «&#x00A0;Directeur&#x00A0;» et «&#x00A0;Rédacteur en
                        chef&#x00A0;».</td></tr>
                    <tr><td>Exemple 1:</td>
                    <td>
                        <p class="exemple">&lt;directeur sexe="masculin"&gt;<br/>
                            &lt;fonction&gt;Directeur adjoint&lt;/fonction&gt;<br/>
                            &lt;nompers&gt;<br/>
                            &lt;prenom&gt;Jean-François&lt;/prenom&gt;<br/>
                            &lt;nomfamille&gt;Thibault&lt;/nomfamille&gt;<br/>
                            &lt;/nompers&gt;<br/>
                            &lt;/directeur&gt;<br/>
                        </p>
                            </td></tr>
                            <tr>
                            <td>Exemple 2:</td><td>
                                <p class="exemple">&lt;redacteurchef sexe="masculin" typerc="regulier"&gt;<br/>
                                    &lt;nompers&gt;<br/>
