    <xs:element name="section4">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Section de niveau 4</td></tr>
                    <tr><td>Description:</td>
                    <td>Une sous-section dans une section de niveau 3.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;section4 id="s4n1"&gt;<br/>
                            &lt;no&gt;1.3.9.1&lt;/no&gt;<br/>
                            &lt;titre&gt;…&lt;/titre&gt;<br/>
                            &lt;para id="pa95"&gt;…&lt;/para&gt;<br/>
                            &lt;para id="pa96"&gt;…&lt;/para&gt;<br/>
                            &lt;/section4&gt;<br/>
                        </p>
                    </td></tr>
