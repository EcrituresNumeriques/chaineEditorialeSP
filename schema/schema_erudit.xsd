    <xs:element name="section3">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Section de niveau 3</td></tr>
                    <tr><td>Description:</td>
                    <td>Une sous-section dans une section de niveau 2.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;section3 id="s3n9"&gt;<br/>
                            &lt;no&gt;1.3.9&lt;/no&gt;<br/>
                            &lt;titre&gt;…&lt;/titre&gt;<br/>
                            &lt;para id="pa57"&gt;…&lt;/para&gt;<br/>
                            &lt;para id="pa58"&gt;…&lt;/para&gt;<br/>
                            &lt;para id="pa59"&gt;…&lt;/para&gt;<br/>
