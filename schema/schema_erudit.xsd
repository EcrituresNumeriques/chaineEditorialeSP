                <table>
                    <tr><td>Étiquette:</td>
                    <td>Section de niveau 2</td></tr>
                    <tr><td>Description:</td>
                    <td>Une sous-section dans une section de niveau 1.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;section2 id="s2n3"&gt;<br/>
                            &lt;no&gt;1.3&lt;/no&gt;<br/>
                            &lt;titre&gt;…&lt;/titre&gt;<br/>
                            &lt;epigraphe&gt;…&lt;/epigraphe&gt;<br/>
                            &lt;para id="pa34"&gt;…&lt;/para&gt;<br/>
                            &lt;/section2&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="sectiontype">
