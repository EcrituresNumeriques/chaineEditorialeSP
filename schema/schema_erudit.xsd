    <!-- ++++++++++++++++++ xlink sur un clic de souris ++++++++++++++++++ -->
    <xs:attributeGroup name="xlinkclic">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Liens de type Xlink au clic de la souris</td></tr>
                    <tr><td>Description:</td>
                    <td>Modèle de contenu des attributs «&#x00A0;xlink:type&#x00A0;», «&#x00A0;xlink:href&#x00A0;», «
                        xlink:show&#x00A0;», «&#x00A0;xlink:actuate&#x00A0;», «&#x00A0;xlink:title&#x00A0;» et «&#x00A0;xlink:role&#x00A0;».</td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:attribute ref="xlink:type" use="required" fixed="simple">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Typage XLink</td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <p>Attribut normalisé typant l’élément dans l’espace de noms XLink.</p>
                            <table>
                                <tr><td>arc</td></tr>
                                <tr><td>extended</td></tr>
                                <tr><td>locator</td></tr>
                                <tr><td>resource</td></tr>
                                <tr><td>simple</td></tr>
                                <tr><td>title</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Documents de référence:</td>
                        <td>xlink:type (<a href="http://www.w3.org/TR/xlink/#link-types">http://www.w3.org/TR/xlink/#link-types</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute ref="xlink:href" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>URI</td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <table>
                                <tr><td>audio, image, pointeur, video</td>
                                <td>URI de la ressource visée par l’élément (généralement un
                                    fichier d’image, d’extrait sonore ou vidéo, ou un nœud dans le
                                    document XML courant).</td></tr>
                                <tr><td>erratum</td>
                                <td>URI de l’article contenant le texte de l’erratum.</td></tr>
                                <tr><td>liensimple</td>
                                <td>URI du fichier de la ressource visée par l’hyperlien.</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Format:</td>
                        <td>RFC 2396</td></tr>
                        <tr><td>Documents de référence::</td>
                        <td>RFC 2396 (<a href="http://www.ietf.org/rfc/rfc2396.txt">http://www.ietf.org/rfc/rfc2396.txt</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute ref="xlink:show" default="replace">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Mode d’affichage</td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <table>
                                <tr><td>lien</td>
                                <td>Attribut qui indique à l’agent utilisateur comment devrait se
                                    manifester la ressource de destination du lien (i.e. l’URI du «
                                    pointeur&#x00A0;»).</td></tr>
                                <tr><td>erratum</td>
                                <td>Attribut qui indique à l’agent utilisateur comment devrait se
                                    manifester la ressource touchée par le lien (correspondant à
                                    l’URI de la valeur de HREF).</td></tr>
                                <tr><td>audio, image, video</td>
                                <td>Attribut qui indique à l’agent utilisateur comment devrait se
                                    manifester la ressource touchée par le lien (par exemple une
                                    image dont le fichier est indiqué par l’URI contenu dans la
                                    valeur de HREF).</td></tr>
                                <tr><td>liensimple</td>
                                <td>Attribut qui indique à l’agent utilisateur comment devrait se
                                    manifester la ressource touchée par le lien.</td></tr>
                            </table>
                            <table>
                                <tr><td>embed</td>
                                <td>La ressource doit s’insérer dans la page</td></tr>
                                <tr><td>new</td>
                                <td>La ressource (document) s’affiche dans une nouvelle
                                        fenêtre</td></tr>
                                <tr><td>none</td>
                                <td>Pas de mode d’affichage précisé</td></tr>
                                <tr><td>other</td>
                                <td>Autre type d’affichage non précisé dans la spécification
                                        de XLink, mais l’application XML devrait trouver les
                                        instructions pour le mode d’affichage dans un attribut
                                        présent dans le lien</td></tr>
                                <tr><td>replace</td>
                                <td>La ressource remplace la page courante</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Documents de référence:</td>
                        <td>xlink:show (<a href="http://www.w3.org/TR/xlink/#show-att">http://www.w3.org/TR/xlink/#show-att</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute ref="xlink:actuate" default="onRequest">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>Mise en action de l’hyperlien</td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <p>Spécifie de quelle manière l’hyperlien doit être mis en action :
                            généralement au chargement de la ressource qui contient le lien ou après
                            le clique effectué par l’utilisateur.</p>
                            <table>
                                <tr><td>none</td>
                                <td>Pas de mode d’activation précisé (on peut supposer que le lien
                                    n’est pas activé dans l’application XML)</td></tr>
                                <tr><td>onLoad</td>
                                <td>Le lien est automatiquement activé lors du chargement de la
                                    ressource qui contient le lien</td></tr>
                                <tr><td>onRequest</td>
                                <td>La page s’affiche lorsque l’utilisateur clique (ou active)
                                    l’hyperlien</td></tr>
                                <tr><td>other</td>
                                <td>La méthode d’activation du lien n’est pas précisée dans la
                                    spécification XLink, mais l’application XML devrait trouver les
                                    instructions pour l’actualisation dans un attribut présent dans
                                    le lien </td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Documents de référence:</td>
                        <td>xlink:actuate (<a href="http://www.w3.org/TR/xlink/#actuate-att">http://www.w3.org/TR/xlink/#actuate-att</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute ref="xlink:title">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>
                            <table>
                                <tr><td>grlien</td>
                                <td>Titre du groupe lien</td></tr>
                                <tr><td>pointeur</td>
                                <td>Titre du pointeur</td></tr>
                                <tr><td>lien</td>
                                <td>Titre du lien</td></tr>
                                <tr><td>audio, erratum, image, liensimple, video</td>
                                <td>Titre de l’hyperlien</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <table>
                                <tr><td>grlien</td>
                                <td>Titre descriptif que l’on peut donner au groupe lien.</td></tr>
                                <tr><td>pointeur</td>
                                <td>Titre descriptif que l’on peut donner au pointeur. Cela permet
                                    de le typer ou de donner une instruction/information à
                                    l’utilisateur à propos de la ressource associée au
                                    pointeur.</td></tr>
                                <tr><td>lien</td>
                                <td>Titre descriptif que l’on peut donner à l’instance de
                                    l’hyperlien. Cela permet de le typer ou de donner une
                                    instruction/information à l’utilisateur.</td></tr>
                                <tr><td>audio, erratum, image, video</td>
                                <td>Titre descriptif que l’on peut donner à l’hyperlien. Cela
                                    permet de le typer ou de donner une instruction/information à
                                    l’utilisateur.</td></tr>
                                <tr><td>liensimple</td>
                                <td>Titre descriptif que l’on peut donner à l’hyperlien. Cela
                                    permet de le typer ou de donner une instruction/information à
                                    l’utilisateur à propos de la ressource visée par le lien.</td></tr>
                            </table>
                        </td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute ref="xlink:role">
            <xs:annotation>
                <xs:documentation xml:lang="fr">
                    <table>
                        <tr><td>Étiquette:</td>
                        <td>
                            <table>
                                <tr><td>grlien</td>
                                <td>Rôle du groupe lien</td></tr>
                                <tr><td>pointeur</td>
                                <td>Rôle de la ressource</td></tr>
                                <tr><td>audio, erratum, image, liensimple, video</td>
                                <td>Rôle de l’hyperlien</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Description:</td>
                        <td>
                            <table>
                                <tr><td>grlien</td>
                                <td>Contient l’URI d’une page d’aide ou d’une définition relative
                                    au groupe lien.</td></tr>
                                <tr><td>pointeur</td>
                                <td>Contient l’URI d’une page d’aide ou d’une définition relative
                                    à la ressource touchée par le pointeur.</td></tr>
                                <tr><td>audio, erratum, image, liensimple, video</td>
                                <td>Contient l’URI d’une page d’aide ou d’une définition relative
                                    à la ressource touchée par l’hyperlien.</td></tr>
                            </table>
                        </td></tr>
                        <tr><td>Format:</td>
                        <td>RFC 2396</td></tr>
                        <tr><td>Documents de référence:</td>
                        <td>RFC 2396 (<a href="http://www.ietf.org/rfc/rfc2396.txt">http://www.ietf.org/rfc/rfc2396.txt</a>)</td></tr>
                    </table>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:attributeGroup>
