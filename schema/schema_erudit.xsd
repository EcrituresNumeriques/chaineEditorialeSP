                            &lt;section2 id="s2n1"&gt;…&lt;/section2&gt;<br/>
                            &lt;/section1&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:choice>
                <xs:sequence>
                    <xs:element ref="no"/>
                    <xs:sequence minOccurs="0">
                        <xs:element ref="titre"/>
                        <xs:element ref="titreparal" minOccurs="0" maxOccurs="unbounded"/>
