        </xs:complexType>
    </xs:element>
    <!-- ++++++++++++++++++ cinquième niveau de section ++++++++++++++++++ -->
    <xs:element name="section5">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Section de niveau 5</td></tr>
                    <tr><td>Description:</td>
                    <td>Une sous-section dans une section de niveau 4.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;section5 id="s5n2"&gt;<br/>
                            &lt;no&gt;1.3.9.1.2&lt;/no&gt;<br/>
                            &lt;titre&gt;…&lt;/titre&gt;<br/>
                            &lt;section6 id="s6n1"&gt;…&lt;/section6&gt;<br/>
                            &lt;/section5&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
