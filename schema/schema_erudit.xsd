                            &lt;alinea&gt;…&lt;/alinea&gt;<br/>
                            &lt;/legende&gt;<br/>
                            &lt;objetmedia flot="bloc"&gt;<br/>
                            &lt;image id="im7" typeimage="figure" /&gt;<br/>
                            &lt;/objetmedia&gt;<br/>
                            &lt;/figure&gt;<br/>
                            &lt;figure id="fi4"&gt;<br/>
                            &lt;no&gt;Fig. 3b&lt;/no&gt;<br/>
                            &lt;legende lang="fr"&gt;<br/>
                            &lt;alinea&gt;…&lt;/alinea&gt;<br/>
                            &lt;/legende&gt;<br/>
                            &lt;objetmedia flot="bloc"&gt;<br/>
                            &lt;image id="im8" typeimage="figure" /&gt;<br/>
                            &lt;/objetmedia&gt;<br/>
                            &lt;notefig id="nf3"&gt;…&lt;/notefig&gt;<br/>
                            &lt;/figure&gt;<br/>
                            &lt;figure id="fi5"&gt;<br/>
                            &lt;no&gt;Fig. 3c&lt;/no&gt;<br/>
                            &lt;legende lang="fr"&gt;<br/>
                            &lt;alinea&gt;…&lt;/alinea&gt;<br/>
                            &lt;/legende&gt;<br/>
                            &lt;objetmedia flot="bloc"&gt;<br/>
                            &lt;image id="im9" typeimage="figure" /&gt;<br/>
                            &lt;/objetmedia&gt;<br/>
                            &lt;notefig id="nf4"&gt;…&lt;/notefig&gt;<br/>
                            &lt;/figure&gt;<br/>
                            &lt;source&gt;…&lt;/source&gt;<br/>
                            &lt;/grfigure&gt;<br/>
                        </p>
                    </td></tr>
                </table>
            </xs:documentation>
        </xs:annotation>
