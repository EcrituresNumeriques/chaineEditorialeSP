                        <xs:enumeration value="forme"/>
                        <xs:enumeration value="formeef"/>
                        <xs:enumeration value="motpourmot"/>
                        <xs:enumeration value="poeme"/>
                        <xs:enumeration value="poemeef"/>
                        <xs:enumeration value="programme"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
