    <!-- ++++++++++++++++++ note ++++++++++++++++++ -->
    <xs:complexType name="notetype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>De type note</td></tr>
                    <tr><td>Description:</td>
                    <td>Éléments relatifs aux notes dont le modèle de contenu est composé, en tout
                        ou en partie, de l’élément «&#x00A0;no&#x00A0;», du groupe d’éléments «&#x00A0;para&#x00A0;» et du
