        </xs:complexType>
    </xs:element>
    <!-- ++++++++++++++++++ sixième niveau de section ++++++++++++++++++ -->
    <xs:element name="section6" type="sectiontype">
        <xs:annotation>
            <xs:documentation xml:lang="fr">
                <table>
                    <tr><td>Étiquette:</td>
                    <td>Section de niveau 6</td></tr>
                    <tr><td>Description:</td>
                    <td>Une sous-section dans une section de niveau 5.</td></tr>
                    <tr><td>Exemple:</td>
                    <td>
                        <p class="exemple">&lt;section6 id="s6n1"&gt;<br/>
                            &lt;no&gt;1.3.9.1.2.1&lt;/no&gt;<br/>
                            &lt;titre&gt;…&lt;/titre&gt;<br/>
                            &lt;para id="pa300"&gt;…&lt;/para&gt;<br/>
                            &lt;para id="pa301"&gt;…&lt;/para&gt;<br/>
                            &lt;tableau id="ta22"&gt;…&lt;/tableau&gt;<br/>
